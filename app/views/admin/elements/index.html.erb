<%= render 'nav' %>
<h1>Welcome to the (Admin) Element Page</h1>
<p>Here is the list of Elements</p>
<p>
  <%= link_to 'New', new_admin_element_path %>
</p>
<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  <% @elements.each do |a| %>
    <tr>
      <td>
        <%= a.name %>
      </td>
      <td>
        <% if a.avatar.attached? %>
          <%= image_tag a.avatar.variant(resize: "100x100") %>
        <% end %>
      </td>
      <td>
        <%= link_to 'Show', admin_element_path(a) %>
      </td>
      <td>
        <%= link_to 'Edit', edit_admin_element_path(a) %>
      </td>
    </tr>
  <% end %>
</table>