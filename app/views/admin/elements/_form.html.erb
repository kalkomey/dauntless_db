<%= form_with(model: [ :admin, element ], local: true) do |form| %>
  <% if element.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(element.errors.count, "error") %> prohibited this element from being saved:</h2>
      <ul>
        <%element.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row mb-3">
      <div class="col-auto">
        <label for="<%=:name%>" class="col-2 col-form-label">Element&nbspName:</label>
      </div>
      <div class="col">
        <input type="text" id="element_name" name="element[name]" placeholder="Enter name"/>
      </div>
    </div>
    
    <div class="row mb-3">
      <div class="col">
        <label for="name" class="col-2 col-form-label">Element&nbspImage:</label>
      </div>
      <div class="col">
        <%= form.file_field :avatar %>
      </div>
    </div>
    
    <div class="row justify-content-center">
      <a class="btn btn-secondary btn-sm mr-1" href="<%=admin_elements_path%>" role ="button">Back</a>
      <button type="submit" class="btn btn-primary btn-sm">Submit</button>
    </div>

  </div>

      

<% end %>




