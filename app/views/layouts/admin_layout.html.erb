<!DOCTYPE html>
<html>
  <head>
    <title>Dauntless Database Admin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav-pills">
      <a class="navbar-brand" href="<%=admin_path%>"> Admin Pages</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <%= nav_link ' Behemoths  ', admin_behemoths_path, 'admin/behemoths' %>
          <%= nav_link ' Elements  ', admin_elements_path, 'admin/elements' %>
          <%= nav_link ' Perks  ', admin_perks_path, 'admin/perks' %>
          <%= nav_link ' Weapons  ', admin_weapons_path, 'admin/weapons' %>
          <%= nav_link ' Armors  ', admin_armors_path, 'admin/armors' %>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
